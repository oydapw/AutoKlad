@model AutoPartsShop.Models.Product

<div class="container">
    <h1 class="text-center mt-4">Редактировать товар</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" method="post" class="mt-4">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <p>@error.ErrorMessage</p>
                        }
                    </div>
                }
                <input type="hidden" asp-for="ProductId" />
                <input type="hidden" asp-for="CreatedAt" />
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Название</label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Описание</label>
                    <textarea asp-for="Description" class="form-control" rows="3" required></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Price" class="form-label">Цена (BYN)</label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" required />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Stock" class="form-label">В наличии</label>
                    <input asp-for="Stock" class="form-control" type="number" required />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Category" class="form-label">Категория</label>
                    <select asp-for="Category" class="form-select" required>
                        <option value="Тормозные колодки">Тормозные колодки</option>
                        <option value="Масляные фильтры">Масляные фильтры</option>
                        <option value="Свечи зажигания">Свечи зажигания</option>
                        <option value="Аккумуляторы">Аккумуляторы</option>
                        <option value="Ремни ГРМ">Ремни ГРМ</option>
                    </select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100">Сохранить</button>
                <a href="@Url.Action("Index", "Products")" class="btn btn-secondary w-100 mt-2">Отмена</a>
            </form>
        </div>
    </div>
</div>