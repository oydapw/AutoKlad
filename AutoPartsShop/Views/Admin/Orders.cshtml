@model IEnumerable<AutoPartsShop.Models.Order>

<div class="container">
    <h1 class="text-center mt-4">Управление заказами</h1>
    <table class="table mt-4">
        <thead>
            <tr>
                <th>ID заказа</th>
                <th>Пользователь</th>
                <th>Дата</th>
                <th>Сумма (BYN)</th>
                <th>Статус</th>
                <th>Товары</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.User.Email</td>
                    <td>@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@order.TotalAmount</td>
                    <td>@order.Status</td>
                    <td>
                        <ul>
                            @foreach (var detail in order.OrderDetails)
                            {
                                <li>@detail.Product.Name (x@detail.Quantity) - @detail.UnitPrice BYN</li>
                            }
                        </ul>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>